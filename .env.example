# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@db:5432/menu_db

# PostgreSQL individual settings (optional, used if DATABASE_URL not set)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=menu_db
DB_HOST=db
DB_PORT=5432

# API Configuration
API_PREFIX=/api
CORS_ORIGINS=["http://localhost:3000", "http://localhost", "http://127.0.0.1:3000"]

# Application Settings
APP_NAME=Menu Management API
DEBUG=true
